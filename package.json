    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "isomorphic-fetch": "^3.0.0",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
